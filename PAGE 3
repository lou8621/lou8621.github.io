        <footer>
            <p>Interactive Directory Tree &copy; 2023 | Click on directories to explore content</p>
        </footer>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Handle main directory button clicks
            const mainButtons = document.querySelectorAll('.main-btn');
            mainButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const subDirs = this.nextElementSibling;
                    const isExpanded = subDirs.style.display === 'block';
                    
                    // Close all other directories
                    document.querySelectorAll('.sub-directories').forEach(item => {
                        item.style.display = 'none';
                    });
                    
                    document.querySelectorAll('.main-btn').forEach(btn => {
                        btn.classList.remove('expanded');
                    });
                    
                    // Toggle current directory
                    if (!isExpanded) {
                        subDirs.style.display = 'block';
                        this.classList.add('expanded');
                    }
                });
            });
            
            // Handle subdirectory button clicks
            const subButtons = document.querySelectorAll('.sub-btn');
            subButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const content = this.nextElementSibling;
                    const isExpanded = content.style.display === 'block';
                    
                    // Close all other content in the same directory
                    const parentDir = this.parentElement;
                    parentDir.querySelectorAll('.content').forEach(item => {
                        item.style.display = 'none';
                    });
                    
                    // Toggle current content
                    if (!isExpanded) {
                        content.style.display = 'block';
                    }
                });
            });
        });
    </script>
</body>
</html>
